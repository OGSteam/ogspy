# Configuration de style de code unifiée pour différents éditeurs et IDE
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# JavaScript et fichiers associés
[*.{js,json,ts,jsx,tsx}]
indent_size = 2

# Styles
[*.{css,less,scss,sass}]
indent_style = tab
indent_size = 2

# PHP
[*.php]
indent_style = space
indent_size = 4

# HTML, XML et templates
[*.{html,htm,xml,twig,blade.php}]
indent_style = tab
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Fichiers de configuration
[*.{yml,yaml,toml}]
indent_size = 2
